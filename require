"""Install package dependencies."""

import subprocess
import sys
from pathlib import Path

MONOREPO_DIR = Path(__file__).parent.parent.parent.resolve()
REQUIREMENTS_FILE = MONOREPO_DIR / "require"


def install_all_dependencies():
    subprocess.run(
        [
            sys.executable,
            str(REQUIREMENTS_FILE),
        ],
    )


if __name__ == "__main__":
    install_all_dependencies()
